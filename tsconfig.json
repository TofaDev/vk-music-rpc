{
  "compilerOptions": {

    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
  
    /* Emit */
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
